<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"

    android:paddingTop="32dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <!-- Верхняя кнопка профиля -->
    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="91dp"
        android:layout_height="91dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/circle_background"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/_13"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"/>

    <!-- Кнопка Информация -->
    <Button
        android:id="@+id/imageButton4"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="120dp"
        android:backgroundTint="@color/my_custom_color"
        android:gravity="start|center_vertical"
        android:paddingStart="16dp"
        android:text="Информация"
        android:textColor="#F2EEE7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>


    <Button
        android:id="@+id/btnAlphavit"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"

        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/my_custom_color"
        android:gravity="start|center_vertical"
        android:paddingStart="16dp"
        android:text="1 урок: Алфавит (Дактиль)"
        android:textColor="#F2EEE7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageButton4" />

    <Button
        android:id="@+id/btnPrivet"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        android:gravity="start|center_vertical"
        android:paddingStart="16dp"
        android:text="2 Урок: Базовые понятия и общение"
        android:textColor="#F2EEE7"
        android:backgroundTint="@color/my_custom_color"
        app:layout_constraintTop_toBottomOf="@id/btnAlphavit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <Button
        android:id="@+id/btnZnacoms"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:gravity="start|center_vertical"
        android:paddingStart="16dp"
        android:text="3 Урок: Люди и семья"
        android:textColor="#F2EEE7"
        android:backgroundTint="@color/my_custom_color"
        app:layout_constraintTop_toBottomOf="@id/btnPrivet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>


    <Button
        android:id="@+id/button_repeat"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:layout_margin="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#393F50"
        android:text="Упражнения"
        android:textColor="#F2EEE7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_repeat2"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:layout_margin="16dp"
        android:layout_marginBottom="-2dp"
        android:backgroundTint="#393F50"
        android:text="Слова на Дактиле"
        android:textColor="#F2EEE7"
        app:layout_constraintBottom_toTopOf="@+id/button_repeat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btnInfoRight"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@null"
        android:elevation="4dp"
        android:tint="#393F50"
        app:srcCompat="@android:drawable/ic_dialog_info"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/btnPoisk"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@null"
        android:elevation="4dp"
        android:tint="#393F50"
        app:srcCompat="@android:drawable/ic_menu_search"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnInfoRight" />


</androidx.constraintlayout.widget.ConstraintLayout>
