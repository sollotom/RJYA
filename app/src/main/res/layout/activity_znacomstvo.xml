<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Alfavit">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@android:drawable/ic_menu_revert"
        android:background="@drawable/circle_background"
        android:contentDescription="Назад"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/tvAlphabet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="24dp"
        android:text="Знакомство и первые фразы"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        android:background="@drawable/circle_background"
        app:layout_constraintBottom_toTopOf="@id/button_repeat">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FFFFFF">

            <Button
                android:id="@+id/btnPrivet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/my_custom_color"
                android:text="Как тебя зовут?"
                android:textColor="#F2EEE7" />

            <Button
                android:id="@+id/btnPoka"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/my_custom_color"
                android:text="Меня зовут …"
                android:textColor="#F2EEE7" />

            <Button
                android:id="@+id/btnSpasibo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/my_custom_color"
                android:text="Очень приятно!"
                android:textColor="#F2EEE7" />

            <Button
                android:id="@+id/btnPJ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/my_custom_color"
                android:text="Откуда ты?"
                android:textColor="#F2EEE7" />
            <Button
                android:id="@+id/Yes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/my_custom_color"
                android:text="Я из …"
                android:textColor="#F2EEE7" />
            <Button
                android:id="@+id/No"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/my_custom_color"
                android:text="Где ты живёшь?"
                android:textColor="#F2EEE7" />
            <Button
                android:id="@+id/Kak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/my_custom_color"
                android:text="Чем ты занимаешься?"
                android:textColor="#F2EEE7" />
            <Button
                android:id="@+id/Horosho"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/my_custom_color"
                android:text="Я работаю … "
                android:textColor="#F2EEE7" />
            <Button
                android:id="@+id/Ploho"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/my_custom_color"
                android:text="Я учусь …"
                android:textColor="#F2EEE7" />
            <Button
                android:id="@+id/Tak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/my_custom_color"
                android:text="Ты знаешь РЖЯ?"
                android:textColor="#F2EEE7" />
            <Button
                android:id="@+id/Izvini"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/my_custom_color"
                android:text="Я только учусь"
                android:textColor="#F2EEE7" />
            <Button
                android:id="@+id/Izvini2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/my_custom_color"
                android:text="Я не понимаю этот жест продактируйте, пожайлуста"
                android:textColor="#F2EEE7" />
        </LinearLayout>
    </ScrollView>


    <Button
        android:id="@+id/button_repeat"
        android:layout_width="369dp"
        android:layout_height="59dp"
        android:layout_margin="16dp"
        android:backgroundTint="#393F50"
        android:text="Упражнения"
        android:textColor="#F2EEE7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>
